

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div>
        <form method="post" enctype = "multipart/form-data">
            <table>
                <tr>
                    <td><label>Name</label></td>
                    <td><input type="text" name="name" /></td>
                    <td><p style="color: red">@TempData["name"]</p></td>
                    
                </tr>
                <tr>
                    <td><label>Username</label></td>
                    <td><input type="text" name="username" /></td>
                    <td><p style="color: red">@TempData["username"]</p></td>
                </tr>
                <tr>
                    <td><label>Pasword</label></td>
                    <td><input type="password" name="password" /></td>
                    <td><p style="color: red">@TempData["password"]</p></td>
                </tr>
                <tr>
                    <td><label>Confirm Password</label></td>
                    <td><input type="password" name="confirmPassword" /></td>
                    <td><p style="color: red">@TempData["confirmPassword"]</p></td>
                </tr>
                <tr>
                    <td><label>Date of Birth</label></td>
                    <td><input type="date" name="dateofbirth" /></td>
                    <td><p style="color: red">@TempData["dateofbirth"]</p></td>
                </tr>
                <tr>
                    <td><label>Blood Group</label></td>
                    <td>
                        <select name="bloodgroup">
                            <option value="A+">A+</option>
                            <option value="A-">A-</option>
                            <option value="O+">O+</option>
                            <option value="O-">O-</option>
                            <option value="AB+">AB+</option>
                            <option value="AB-">AB-</option>
                        </select>
                    </td>
                    <td><p style="color: red">@TempData["bloodGroup"]</p></td>
                </tr>
                <tr>
                    <td><label>Gender</label></td>
                    <td>
                        <input type="radio" id="male" name="gender" value="male" />
                        <label for="male">Male</label>
                        <input type="radio" id="female" name="gender" value="female" />
                        <label for="female">Female</label>
                        <input type="radio" id="other" name="gender" value="other" />
                        <label for="other">Other</label>
                    </td>
                    <td><p style="color: red">@TempData["gender"]</p></td>
                </tr>
                <tr>
                    <td></td>
                    <td>
                        @using (Html.BeginForm("UploadFile", "Upload", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                            @Html.TextBox("ProfilePicture", "", new { type = "file" })
                        }
                    </td>
                    <td><span style="color: red"> @TempData["image"]</span></td>
                </tr>
                <tr>
                    <td></td>
                    <td>
                        <input type="checkbox" name="check" id="tick" required/>
                        <span>I have agreed all the terms and conditions</span>
                    </td>
                </tr>
                <tr>
                    <td></td>
                    <td><input type="submit" value="Submit"/></td>
                </tr>
            </table>
        </form>
    </div>
</body>
</html>
